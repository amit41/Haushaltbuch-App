<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="C"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/tvInitialLetter"
        android:padding="12dp"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_for_initial_letter"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:text="Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCategoryItem"
        android:padding="12dp"
        android:textSize="16dp"
        android:layout_alignBaseline="@+id/tvInitialLetter"
        android:layout_alignBottom="@+id/tvInitialLetter"
        android:layout_toRightOf="@+id/tvInitialLetter"
        android:layout_toEndOf="@+id/tvInitialLetter"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>
